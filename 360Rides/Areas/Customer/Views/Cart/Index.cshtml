@model IEnumerable<ServiceRequest>
<div class="row">
    <div class="col-12 text-center">
        <h1>Cart Summary </h1>
    </div>
    <div class="col-11 border my-2">
        <form >
            @foreach(var service in Model)
            {
                <div class="row my-4">
                    <div class="col-4">
                       @*  <h4 class="fw-bolder text-center">Services</h4> *@
                        <p class=" fw-bolder col-12">@service.Service.ServiceName</p>
                        <p class="col-12">@service.PickUpLocation</p>
                        <p class="col-12  text-center"><i class="bi f bi-arrow-down-up "></i></p>
                        <p class="col-12">@service.DropOffLocation</p>
                    </div>
                    <div class=" d-flex align-items-start row col-3 ">
                        <button class="btn btn-danger col mx-1"><i class="bi bi-dash"></i></button>
                        <input type="number" class=" text-center col form-control" value="@service.childrenNumber" />
                        <button class=" col btn btn-primary mx-1"><i class="bi bi-plus"></i></button>
                    </div>
                    <div class="d-flex align-items-start row col-3 offset-1 ">
                        <button type="button" asp-area= "Customer" asp-controller =" cart" asp-action ="details" asp-route-product ="@service." class="btn btn-danger col mx-1"><i class="bi bi-pencil-square"></i></button>
                        <button type="button" asp-area="Customer" asp-controller=" cart" asp-action="details" asp-route-product="@service." class="btn btn-danger col mx-1"><i class="bi bi-trash3-fill"></i></button>
                    </div>
                </div>
            }
            
        </form>
    </div>
</div>