@model IEnumerable<CartDTO>




@section Styles {
    <style src="~/css/cartpage.css"></style>
}

@{
    ViewData["Title"] = "Cart Summary";
}

<br />
<br />

<div class="row">
    <div class="col-12 text-center">
    </div>
    <div class="col-11 border my-2 bordered-form">
        <form >
            @foreach(var service in Model)
            {
                <div class="row my-4">
                    <div class="col-6">
                       @*  <h4 class="fw-bolder text-center">Services</h4> *@

                        <p class=" fw-bolder col-12">@service.ServiceName</p>
                        <div class="dropdown-container">
                            <button class="button">
                                locations
                            </button>
                            <br />
                            <br>
                            @* <p class="dropdown-button btn-outline-danger">Locations</p> *@
                            <div class="dropdown-content">
                                <p class="col-12 text-center">@service.PickUpLocation</p>
                                <p class="col-12  text-center"><i class="bi f bi-arrow-down-up "></i></p>
                                <p class="col-12 text-center">@service.DropOffLocation</p>
                            </div>
                        </div>
                        @* <p class="col-12">@service.PickUpLocation</p>

                        <p class="col-12  text-center"><i class="bi f bi-arrow-down-up "></i></p>
                        <p class="col-12">@service.DropOffLocation</p> *@
                    </div>
                    <div class="d-flex align-items-center row col-6 ">

                        <a class="btn btn-danger asp-area="Customer" asp-controller="cart" asp-action="details" asp-route-requestId="@service.Id"><i class="bi bi-pencil-square"></i></a>
                        <a  asp-area="Customer" asp-controller="cart" asp-action="deleteOrder" asp-route-requestId="@service.Id" class="btn btn-danger col mx-1"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                </div>
            }
            @if (ViewBag.itemCount > 0)
            {
                <button type="submit" class="btn btn-primary">Send Request</button>
            }
           

        </form>
    </div>
</div>