@model EmployeeVM


<div class="row">
    <form method="post">
        <div class="row">
            <div style="display:flex" class="col-md-12 align-items-end justify-content-end">
                <a class="col-2 btn btn-primary" asp-area="Admin" asp-controller="Services" asp-action="Index"> Back to Employees</a>
            </div>
            <div class="col-12 border my-4">
                <div>

                    @if (!Model.employeeDTO.Id.Equals(Guid.Empty))
                    {
                        <h1>Edit Employee Details</h1>
                    }
                    else
                    {
                        <h1>New Employee</h1>
                    }

                </div>
                <form method="post" class="my-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input asp-for="employeeDTO.Id" hidden />
                    
                    <div class="form-floating mb-3">
                        <input asp-for="employeeDTO.Name" class="form-control" autocomplete="on" aria-required="true" />
                        <label asp-for="employeeDTO.Name">Name</label>
                        <span asp-validation-for="employeeDTO.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="employeeDTO.Address" class="form-control" autocomplete="on aria-required="true"/>
                        <label asp-for="employeeDTO.Address">Address</label>
                        <span asp-validation-for="employeeDTO.Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3  ">
                        <select  asp-for="employeeDTO.Role" asp-items = "@Model.roles" class="form-control role" aria-required="true" >
                            <option disabled selected>
                                --Select Role--
                            </option>
                        </select>
                        <label class="mx-2" asp-for="employeeDTO.Role">Role</label>
                        <span asp-validation-for="employeeDTO.Role" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3  ">
                        <input type="number" asp-for="employeeDTO.LicenseType" class="form-control" aria-required="true" />
                        <label class="mx-2" asp-for="employeeDTO.LicenseType">License Type (Class)</label>
                        <span asp-validation-for="employeeDTO.LicenseType" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3  ">
                        <input  asp-for="employeeDTO.Email" class="form-control" aria-required="true" />
                        <label class="mx-2" asp-for="employeeDTO.Email">Email</label>
                        <span asp-validation-for="employeeDTO.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3  ">
                        <input  asp-for="employeeDTO.PhoneNumber" class="form-control" aria-required="true" />
                        <label class="mx-2" asp-for="employeeDTO.PhoneNumber">Phone Number</label>
                        <span asp-validation-for="employeeDTO.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button class="col-2 learn-more" asp-area="Admin" asp-controller="Employees" asp-action="upsert">
                        <span class="circle" aria-hidden="true">
                            <span class="icon arrow"></span>
                        </span>
                        <span class="button-text">Submit</span>
                    </button>

                </form>
            </div>
        </div>
    </form>

</div>

 @section Scripts{
     <script>
        $(".role").on("change", function())

     </script>
                

       }